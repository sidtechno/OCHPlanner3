                            </div>
                            <label for="Description" class="control-label col-md-2 mt-2">@Localizer["Description"]</label>
                            <div class="col-md-4">
                                <input asp-for="Description" name="Description" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="LastServiceMileage" class="control-label col-md-2 mt-2">@Localizer["LastServiceMileage"]</label>
