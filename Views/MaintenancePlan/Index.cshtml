@model MaintenancePlanViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Title"];
}

@Html.Hidden("hidVINNotFoundTitle", Localizer["VINNotFoundTitle"].Value)
@Html.Hidden("hidVINNotFoundText", Localizer["VINNotFoundText"].Value)
@Html.Hidden("hidCreateVehicleButton", Localizer["CreateVehicle"].Value)

@Html.Hidden("HidRootUrl", Model.RootUrl)

<div class="main-content-inner">
    <div class="container">

        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title"><i class="fad fa-car-alt mr-2"></i>@Localizer["VehicleInfo"]</h4>

                        <div class="form-group row">
                            <label for="VinCode" class="control-label col-md-2 mt-2">@Localizer["Vin"]</label>
                            <div class="col-md-3">
                                <input asp-for="Vehicle.VinCode" name="VinCode" class="form-control" />
                            </div>
                            <label for="Description" class="control-label col-md-1 mt-2">@Localizer["Description"]</label>
                            <div class="col-md-6">
                                <div class="input-group mb-0">
                                    <input asp-for="Vehicle.Description" name="Description" class="form-control" />
                                    <div class="input-group-append">
                                        <button class="btn btn-primary btn-xs" type="button" data-toggle="modal" data-target="#vehicleModal"><i class="fad fa-edit"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="LastServiceMileage" class="control-label col-md-2 mt-2">@Localizer["LastServiceMileage"]</label>
                            <div class="col-md-2">
                                <input asp-for="LastServiceMileage" name="LastServiceMileage" class="form-control" maxlength="20" />
                            </div>
                            <label for="LastServiceDate" class="control-label col-md-2 mt-2">@Localizer["LastServiceDate"]</label>
                            <div class="col-md-2">
                                <input asp-for="LastServiceDate" name="LastServiceDate" class="form-control" maxlength="20" />
                            </div>
                            <label for="MonthlyMileage" class="control-label col-md-2 mt-2">@Localizer["MonthlyMileage"]</label>
                            <div class="col-md-2">
                                <input asp-for="MonthlyMileage" name="LastServiceDate" class="form-control" maxlength="20" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="EntryDate" class="control-label col-md-2 mt-2">@Localizer["EntryDate"]</label>
                            <div class="col-md-2">
                                <input asp-for="EntryDate" name="EntryDate" class="form-control" maxlength="20" />
                            </div>
                            <label for="SelectedOil" class="control-label col-md-2 mt-2">@Localizer["UseOil"]</label>
                            <div class="col-md-2">
                                <select asp-for="Vehicle.SelectedOil" name="oillist" asp-items="Model.Vehicle.OilList" class="form-control">
                                    <option value="">-- Select --</option>
                                </select>
                            </div>
                            <label for="SelectedMaintenancePlan" class="control-label col-md-2 mt-2">@Localizer["MaintenancePlan"]</label>
                            <div class="col-md-2">
                                <select asp-for="Vehicle.SelectedMaintenancePlan" name="maintenancelist" asp-items="Model.Vehicle.MaintenancePlanList" class="form-control">
                                    <option value="">-- Select --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row mb-0">
                            <label for="UnitNo" class="control-label col-md-2 mt-2">@Localizer["UnitNo"]</label>
                            <div class="col-md-2">
                                <input asp-for="Vehicle.UnitNo" name="UnitNo" class="form-control" maxlength="20" />
                            </div>
                            <label for="Plate" class="control-label col-md-2 mt-2">@Localizer["Plate"]</label>
                            <div class="col-md-2">
                                <input asp-for="Vehicle.Plate" name="Plate" class="form-control" maxlength="20" />
                            </div>
                            <label for="Color" class="control-label col-md-2 mt-2">@Localizer["Color"]</label>
                            <div class="col-md-2">
                                <input asp-for="Vehicle.Color" name="Color" class="form-control" maxlength="20" />
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="card mt-4">
                            <div class="card-body">
                                <div class="form-group row mb-0">
                                    <label for="Odometer" class="control-label col-md-2 mt-2">@Localizer["Odometer"]</label>
                                    <div class="col-md-2">
                                        <input asp-for="Vehicle.Odometer" name="Odometer" class="form-control" maxlength="20" />
                                    </div>
                                    <div class="col-md-8" style="text-align:right;">
                                        <button id="btnVisit" type="button" class="btn btn-primary">Nouvelle visite</button>
                                        <button id="btnWorkInProgress" type="button" class="btn btn-primary">Travaux en cours</button>
                                        <button id="btnMaintenance" type="button" class="btn btn-primary">État de la maintenance</button>
                                        <button id="btnEdit" type="button" class="btn btn-primary">Modifier le dossier</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="header-title"><i class="fad fa-user mr-2"></i>@Localizer["OwnerInfo"]</h4>
                                <div class="form-group row">
                                    <label for="Owner.Company" class="control-label col-md-4 mt-2">@Localizer["Company"]</label>
                                    <div class="col-md-8">
                                        <input asp-for="Owner.Company" name="Company" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Owner.Name" class="control-label col-md-4 mt-2">@Localizer["Name"]</label>
                                    <div class="col-md-8">
                                        <input asp-for="Owner.Name" name="Name" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Owner.Address" class="control-label col-md-4 mt-2">@Localizer["Address"]</label>
                                    <div class="col-md-8">
                                        <input asp-for="Owner.Address" name="Address" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Owner.Phone" class="control-label col-md-4 mt-2">@Localizer["Phone"]</label>
                                    <div class="col-md-8">
                                        <input asp-for="Owner.Phone" name="Phone" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group row mb-0">
                                    <label for="Owner.Email" class="control-label col-md-4 mt-2">@Localizer["Email"]</label>
                                    <div class="col-md-8">
                                        <input asp-for="Owner.Email" name="Email" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="header-title"><i class="fad fa-user mr-2"></i>@Localizer["DriverInfo"]</h4>
                                <div class="form-group row">
                                    <label for="Driver.Name" class="control-label col-md-4 mt-2">@Localizer["Name"]</label>
                                    <div class="col-md-8">
                                        <input asp-for="Driver.Name" name="Name" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Driver.Phone" class="control-label col-md-4 mt-2">@Localizer["Phone"]</label>
                                    <div class="col-md-8">
                                        <input asp-for="Driver.Phone" name="Phone" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Driver.Cellphone" class="control-label col-md-4 mt-2">@Localizer["CellPhone"]</label>
                                    <div class="col-md-8">
                                        <input asp-for="Driver.CellPhone" name="Cellphone" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Driver.Email" class="control-label col-md-4 mt-2">@Localizer["Email"]</label>
                                    <div class="col-md-8">
                                        <input asp-for="Driver.Email" name="Email" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group row mb-0">
                                    <label for="Driver.Autorization" class="control-label col-md-4 mt-2">@Localizer["Authorization"]</label>
                                    <div class="col-md-8">
                                        <input asp-for="Driver.Autorization" name="Autorization" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Right column area  -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body" style="min-height:785px;">
                        <h4 class="header-title"><i class="fad fa-history mr-2"></i>@Localizer["VisitHistory"]</h4>

                    </div>
                </div>

            </div>
            <!-- Right Column area end -->
        </div>

        <!-- Programs -->
        <div class="row">
            <div class="col-md-12">
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="header-title"><i class="fad fa-list-alt mr-2"></i>@Localizer["Programs"]</h4>

                        <ul id="add-role-list-ul" style="list-style: none; padding: 10px;">

                            <li>
