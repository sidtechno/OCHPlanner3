@model StickerSimpleViewModel

@{
    ViewData["Title"] = "Autocollant Simple";
}

<style>
    .form-group {
        margin-bottom: 0.5rem !important;
    }
</style>

<div class="main-content-inner">
    <div class="container">

        <div class="row">
            <!-- trading history area start -->
            <div class="col-lg-8 mt-sm-30 mt-xs-30">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group row">
                            <label for="unit" class="control-label col-md-4">Sélectionnez unitée</label>
                            <div class="col-md-8">
                                <label class="mr-4"><input asp-for="SelectedUnit" value="KM" type="radio" class="mr-1" />Kilomètres</label>
                                <label class="mr-4"><input asp-for="SelectedUnit" value="MI" type="radio" class="mr-1" />Miles</label>
                                <label><input asp-for="SelectedUnit" value="HM" type="radio" class="mr-1" />Heures moteur</label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="comment" class="control-label col-md-4">Commentaire</label>
                            <div class="col-md-8">
                                <input asp-for="Comment" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="oil" class="control-label col-md-4">Huile utilisée</label>
                            <div class="col-md-8">
                                <select asp-for="SelectedOil" asp-items="Model.OilList" class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="unitValue" class="control-label col-md-4">Kilomètre</label>
                            <div class="col-md-8">
                                <input asp-for="UnitValue" class="form-control" />
                            </div>
                        </div>
                        <div id="Choice1">
                            <div class="alert alert-dark" role="alert" style="margin-bottom: 0.5rem;">
                                <h6 class="alert-heading">Intervale prochain service</h6>
                                <hr>
                                <div class="col-md-12 row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label for="unitValue" class="control-label col-md-4">Mois</label>
                                            <div class="col-md-8">
                                                <select asp-for="SelectedOil" asp-items="Model.OilList" class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label for="unitValue" class="control-label col-md-4">Intervale</label>
                                            <div class="col-md-8">
                                                <select asp-for="SelectedOil" asp-items="Model.OilList" class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="Choice2">
                            <div class="alert alert-dark" role="alert" style="margin-bottom: 0.5rem;">
                                <h6 class="alert-heading">Date du jour</h6>
                                <hr>
                                <div class="col-md-12 row">
                                    <div class="col-md-6">
                                        Imprimer la date du jour
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label for="unitValue" class="control-label col-md-4">Ajouter</label>
                                            <div class="col-md-8">
                                                <select asp-for="SelectedOil" asp-items="Model.OilList" class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="Choice3">
                            <div class="alert alert-dark" role="alert" style="margin-bottom: 0.5rem;">
                                <h6 class="alert-heading">Données fixe</h6>
                                <hr>
                                <div class="col-md-12 row">
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label for="unitValue" class="control-label col-md-4">Mois</label>
                                            <div class="col-md-8">
                                                <select asp-for="SelectedOil" asp-items="Model.OilList" class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label for="unitValue" class="control-label col-md-4">Année</label>
                                            <div class="col-md-8">
                                                <select asp-for="SelectedOil" asp-items="Model.OilList" class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label for="unitValue" class="control-label col-md-4">Unité</label>
                                            <div class="col-md-8">
                                                <select asp-for="SelectedOil" asp-items="Model.OilList" class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <button type="button" class="btn btn-primary mb-3">Sauvegarder</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- trading history area end -->
            <!-- Previewe area end -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
