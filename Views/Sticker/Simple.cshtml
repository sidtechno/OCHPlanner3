                                    <div class="form-group">
                                        <label for="KmBox" class="control-label">Prochain kilomètre</label>
                                        @Html.TextBoxFor(model => model.KmBox, new { id = "KmBox", @class = "form-control input", @maxlength = "10", @name = "KmBox", @value = "", @autocomplete = "off", @placeholder = "0" })
