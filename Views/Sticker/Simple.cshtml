                            </div>
                            <div class="col-md-6">
                                <button class="btn btn-primary w-100" id="btnPrint"><i class="fad fa-print mr-2"></i>Imprimer</button>
                            </div>
                        </div>

                        @*</div>

                            </div>*@

                        @*}*@
                    </div>
                </div>
            </div>
            <!-- Preview area end -->
        </div>




