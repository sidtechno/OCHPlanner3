@model OCHPlanner3.Models.GarageViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

@Html.Hidden("HidRequired", @Localizer["Required"].Value)
@Html.Hidden("HidRootUrl", Model.RootUrl)

<div class="page-title-area">
    <div class="row align-items-center">
        <div class="col-sm-6">
            <div class="breadcrumbs-area clearfix">
                <h4 class="page-title pull-left">@Localizer["Title"]</h4>
            </div>
        </div>
    </div>
</div>

<form id="garage-create">
    <div class="main-content-inner">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="header-title">Coordonnées</h4>
                                    <div class="form-group">
                                        <label for="Name" class="control-label">Nom</label>
                                        <input asp-for="Name" name="name" type="text" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label for="Address" class="control-label">Adresse</label>
                                        <input asp-for="Address" name="address" type="text" class="form-control" />
                                    </div>
                                    <div class="form-row">
                                        <div class="col-md-6 mb-3">
                                            <label for="City" class="control-label">City</label>
                                            <input asp-for="City" type="text" class="form-control" />
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <label for="Province" class="control-label">Province / État</label>
                                            <input asp-for="Province" type="text" class="form-control" />
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <label for="ZipCode" class="control-label">Code Postal</label>
                                            <input asp-for="ZipCode" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col-md-6 mb-3">
                                            <div class="form-group">
                                                <label for="Phone" class="control-label">Téléphone</label>
                                                <input asp-for="Phone" name="phone" type="text" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <div class="form-group">
                                                <label for="Email" class="control-label">Courriel</label>
                                                <input asp-for="Email" name="email" type="email" class="form-control" />
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <div class="col-12 mt-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Modules</h4>
                                        <div class="form-check">
                                            <input asp-for="Support" type="checkbox" class="form-check-input" />
                                            <label class="form-check-label" for="Support">Support</label>
                                        </div>
                                        <div class="form-check">
                                            <input asp-for="OilReset" type="checkbox" class="form-check-input" />
                                            <label class="form-check-label" for="OilReset">OilReset</label>
                                        </div>
                                        <div class="form-check">
                                            <input asp-for="Communication" type="checkbox" class="form-check-input" />
                                            <label class="form-check-label" for="Communication">Communication</label>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="header-title">Configuration</h4>
                                    <div class="form-group">
                                        <label for="bannerList" class="control-label">Bannière</label>
                                        <select asp-for="SelectedBannerId" asp-items="Model.BannerList" class="form-control">
                                            <option value="">-- Select --</option>
                                        </select>
                                    </div>
                                    <div class="form-row">
                                        <div class="col-md-6 mb-3">
                                            <div class="form-group">
                                                <label for="SelectedLanguageCode" class="control-label">Langue</label>
                                                <select asp-for="SelectedLanguageCode" asp-items="Model.LanguageList" class="form-control">
                                                    <option value="">-- Select --</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <div class="form-group">
                                                <label for="NbrUser" class="control-label">Nbr utilisateurs permis</label>
                                                <input asp-for="NbrUser" name="nbrUser" type="number" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col-md-6 mb-3">
                                            <div class="form-group">
                                                <label for="SelectedDateFormatCode" class="control-label">Format de date</label>
                                                <select asp-for="SelectedDateFormatCode" asp-items="Model.DateFormatList" class="form-control">
                                                    <option value="">-- Select --</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <div class="form-group">
                                                <label for="ActivationDate" class="control-label">Date d'activation</label>
                                                <input asp-for="ActivationDate" type="date" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-check">
                                        <input asp-for="PersonalizedSticker" type="checkbox" class="form-check-input" />
                                        <label class="form-check-label" for="PersonalizedSticker">Autocollant personnalisé</label>
                                    </div>

                                </div>
                            </div>
                        </div>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <div class="col-12 mt-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Notes</h4>
                                        <div class="form-group">
                                            <label for="Note" class="control-label">Notes</label>
                                            <textarea asp-for="Note" class="form-control" rows="3"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-12 mt-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="row justify-content-center">
                                <button id="btnSave" type="button" class="btn btn-primary">Sauvegarder</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {

    <script src="~/js/garage-create.js"></script>
}
