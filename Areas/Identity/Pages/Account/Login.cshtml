@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<body class="hold-transition login-page">
    <div class="login-box box-shadow">
        <div class="card">
            <div class="card-body login-card-body">
                <div class="login-logo text-center">
                    <img src=@($"https://ochplanner3.blob.core.windows.net/branding/{Model.Input.BrandingId}_logo.jpg") style="width:220px;" />
                </div>
                <!-- /.login-logo -->
                <p class="login-box-msg">@Model.Input.Translation.Message</p>

                <form id="login-form" method="post">
                    <div class="input-group mb-3">
                        <input asp-for="Input.Email" type="email" class="form-control" placeholder="@Model.Input.Translation.Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="@Model.Input.Translation.Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                    <div class="row">
                        <div class="col-7">
                            <div class="icheck-primary">
                                <input asp-for="Input.RememberMe" type="checkbox">
                                <label for="remember" class="ml-2">
                                    @Model.Input.Translation.RememberMe
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-5">
                            <button type="submit" class="btn btn-primary btn-block">@Model.Input.Translation.ConnectButton</button>
                        </div>
                        <!-- /.col -->
                    </div>
                    @Html.AntiForgeryToken()
                </form>

                <p class="mb-1">
                    @if (HttpContext.Request.Query.ContainsKey("lang") && HttpContext.Request.Query["lang"] == "en")
                    {
                        <a href="./ForgotPassword?lang=en">@Model.Input.Translation.ForgotPassword</a>
                    }
                    else
                    {
                        <a asp-page="./ForgotPassword">@Model.Input.Translation.ForgotPassword</a>
                    }
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>

    </div>

    @section Scripts {
        <script src="~/js/login.js"></script>
    }
</body>
